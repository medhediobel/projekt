  {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.firstName) }}</div>
        <div class="col-md-4">{{ form_row(form.lastName) }}</div>
        <div class="col-md-2">{{ form_row(form.benutzname) }}</div>
        
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.email) }}</div>
        <div class="col-md-2">{{ form_row(form.telefon) }}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{ form_row(form.password) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.adresse) }}</div>
        <div class="col-md-2">{{ form_row(form.city) }}</div>
        <div class="col-md-2">{{ form_row(form.codepost) }}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-primary">{{ button|default('Save') }}</button>
    {{ form_end(form) }}